<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_input_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/password_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:maxLength="4"
        android:cursorVisible="false"
        android:textColor="@android:color/transparent"
        android:inputType="numberPassword"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/password1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/password_circle_default"/>
            <TextView
                android:id="@+id/password2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/password_circle_default"/>
            <TextView
                android:id="@+id/password3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/password_circle_default"/>
            <TextView
                android:id="@+id/password4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/password_circle_default"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center">
            <RelativeLayout
                android:id="@+id/iput_hint"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:background="#000000"/>
                <TextView
                    android:id="@+id/input_psd_text_view"
                    android:layout_width="178dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/input_password"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#000000"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/error_hint"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical">
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:background="@color/password_error"/>
                <TextView
                    android:id="@+id/error_input_text_view"
                    android:layout_width="178dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/password_error"
                    android:text="@string/psd_error"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/password_error"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/iput_again_hint"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:background="#000000"/>
                <TextView
                    android:layout_width="178dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="请输入新密码"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#000000"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

   
</RelativeLayout>
